#!/bin/bash

# Usage: ./script.sh <file> <hostname_to_match>
# Example: ./script.sh config.txt test-1234-001.static.test.com

CONFIG_FILE="$1"
HOSTNAME="$2"

if [[ -z "$CONFIG_FILE" || -z "$HOSTNAME" ]]; then
  echo "Usage: $0 <file> <hostname_to_match>"
  exit 1
fi

# Backup the original file
cp "$CONFIG_FILE" "${CONFIG_FILE}.bak"

awk -v host="$HOSTNAME" '
  BEGIN {
    block_active = 0
    delete_block = 0
    output_block = ""
  }

  # Detect the start of a block
  /^Begin Limit$/ {
    block_active = 1
    delete_block = 0
    output_block = $0 "\n"
    next
  }

  # Capture lines within the block
  block_active {
    output_block = output_block $0 "\n"

    # Identify and process HOST line
    if ($1 == "HOST=") {
      split($2, hosts, " ")
      remaining_hosts = ""
      found_host = 0
      host_count = length(hosts)

      # Process each host in the HOST line
      for (i in hosts) {
        if (hosts[i] == host) {
          found_host = 1
        } else {
          remaining_hosts = remaining_hosts (remaining_hosts == "" ? "" : " ") hosts[i]
        }
      }

      # Decide whether to delete or update the block
      if (found_host && host_count == 1) {
        delete_block = 1  # Mark block for deletion
      } else if (found_host) {
        # Update the HOST line with remaining hosts
        $2 = remaining_hosts
        output_block = gensub(/HOST=[^\n]+/, "HOST=" remaining_hosts, "g", output_block)
      }
    }
    next
  }

  # Detect the end of a block
  /^End Limit$/ {
    if (block_active) {
      output_block = output_block $0 "\n"
      if (!delete_block) {
        # Print the block if it wasnâ€™t marked for deletion
        printf "%s", output_block
      }
      # Reset block tracking
      block_active = 0
      output_block = ""
    }
    next
  }

  # Print lines outside blocks
  {
    print $0
  }
' "$CONFIG_FILE" > "${CONFIG_FILE}.tmp" && mv "${CONFIG_FILE}.tmp" "$CONFIG_FILE"

echo "Processing completed. Original file backed up as ${CONFIG_FILE}.bak."
